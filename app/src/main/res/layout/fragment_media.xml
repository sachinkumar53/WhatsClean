<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="@string/card_detail_transition_name"
    tools:context=".ui.media.MediaFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_tab_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottom_tab_layout"
        style="@style/Widget.Material3.BottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:backgroundColor="@android:color/transparent"
        app:iconMargin="6dp"
        app:iconSize="20dp"
        app:iconTint="?android:textColorSecondaryNoDisable"
        app:iconTintActive="@color/primary_color"
        app:indicatorColor="@color/primary_translucent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_media_navigation"
        app:textColor="@color/primary_color"
        app:textSize="14sp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu_bar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:paddingVertical="4dp"
        android:translationY="64dp"
        style="@style/Widget.MaterialComponents.BottomNavigationView"
        app:elevation="0dp"
        app:itemIconTint="?attr/actionMenuTextColor"
        app:itemTextColor="?attr/actionMenuTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/media_options_menu"
        tools:translationY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>