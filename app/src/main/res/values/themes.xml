<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WhatsClean" parent="Base.Theme.WhatsClean">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <!--     Base application theme. -->
    <style name="Base.Theme.WhatsClean" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">#E8F5E9</item>
        <item name="colorSecondaryContainer">#E8F5E9</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorSecondaryVariant">@color/primary_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="checkboxStyle">@style/CheckboxStyle</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/surface_color</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/surface_color</item>
        <item name="actionModeTheme">@style/CustomActionModeTheme</item>
        <item name="actionBarStyle">@style/ToolbarStyle</item>
        <item name="materialCardViewStyle">@style/CardViewStyle</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <drawable name="window_background">@color/surface_color</drawable>

</resources>